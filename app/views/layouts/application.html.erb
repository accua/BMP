<!DOCTYPE html>
<html>
  <head>
    <title>BuildMyBackpack</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
     <div class="nav-wrapper">
       <a href="/" class="brand-logo">BuildMyBackpack</a>
       <ul id="nav-mobile" class="right hide-on-med-and-down">
         <% if current_user.try(:admin) %>
           <span class="black-text"><li>You are an admin</li></span>
         <% end %>
         <li><a href="/">Home</a></li>
         <li><%= link_to 'Browse Products', products_path %></li>
         <% if current_user %>
         <li><%= link_to current_user.username, user_path(current_user.id) %></li>
         <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
         <% else %>
         <li><%= link_to 'Login', new_user_session_path %></li>
         <% end %>
       </ul>
     </div>
   </nav>

    <div class="container">
      <% if flash[:notice]%>
        <%= flash[:notice] %>
      <% end %>
      <% if flash[:alert]%>
        <%= flash[:alert] %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

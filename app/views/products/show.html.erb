<h1 class="center-align"><%= @product.name %></h1>

<%= image_tag @product.picture.url(:full), class: 'center-pic' %>
<br>

<h3 class="center-align">Product Description</h3>
<h5 class="center-align">
  <%= @product.description %>
</h5>


<%= link_to 'Add Comment', new_product_comment_path(@product) %>

<h3 class="center-align">Discussion</h3>

<% @product.comments.each do |comment| %>
<div class="col l12">
  <div class="card horizontal">
    <div class="card-image">
      <%= image_tag comment.user.avatar.url(:thumb) %>
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <span><strong><%= comment.user.username %></strong> - <%= comment.content %></span>
      </div>
      <% if current_user.try(:admin) || current_user.id == comment.user_id %>
      <div class="card-action">
        <%= link_to 'Edit Comment', edit_product_comment_path(@product, comment) %>
        <%= link_to "Delete", product_comment_path(@product, comment),
                              :data => {:confirm => "Are you sure?",
                              :method => "delete"} %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
